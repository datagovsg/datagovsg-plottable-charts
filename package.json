{
  "name": "datagovsg-plottable-charts",
  "version": "2.0.0",
  "description": "Reusable Plottable chart components",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist/ && mkdir dist && babel src --out-dir dist -s",
    "test": "standard src/**/*.js",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datagovsg/datagovsg-plottable-charts.git"
  },
  "author": "Yong Jun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/datagovsg/datagovsg-plottable-charts/issues"
  },
  "homepage": "https://github.com/datagovsg/datagovsg-plottable-charts#readme",
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "standard": "^8.5.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "standard": {
    "globals": [
      "Plottable",
      "d3",
      "$"
    ]
  }
}
